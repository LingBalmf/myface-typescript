<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
     <button id="my-colour-button" class="colourable" type="button">Change Colour</button>
<h1 class="post-header">Posts</h1>
<ol class="post-container">
    <% results.forEach(function(post) {%>
        <li class="post">
            <img class="post-image"
            src="<%= post.imageUrl %>"
                 alt="<%= post.message %>"
                    />
           <p> <%= post.message %> </p>
           <p>Post by <%= post.postedBy.name %> (<%= post.postedBy.username %>) at <%= post.createdAt %></p>
           <% if(post.likedBy.length > 0) { %>
            <p>
                <%= post.likedBy.length %> likes:
                <ul>
                    <% post.likedBy.forEach(function(user) {%>
                        <li><%= user.name %></li>
                    <% }); %>
                </ul>
            </p>
            <% } %>
        </li>
    <% }); %>
</ol>
<%if (next) { %>
    <a href="<%= next %>">Next</a>
<% } %>
<%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
<% } %>
</body>
<%- include('_footer') -%>
</html>