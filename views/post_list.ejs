<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1 class="post-header">Posts</h1>
<ol>
    <% results.forEach(function(post) {%>
        <li>
            <img
            src="<%= post.imageUrl %>"
                 alt="<%= post.message %>"
                 width="50"
                 height="50"
                    />
           <p> <%= post.message %> </p>
        </li>
    <% }); %>
</ol>
<%if (next) { %>
    <a href="<%= next %>">Next</a>
<% } %>
<%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
<% } %>
</body>
<%- include('_footer') -%>
</html>