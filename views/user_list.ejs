<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1 class="post-header">Users</h1>
<ol class ="post-container">
    <% results.forEach(function(user) {%>
        <li class="post">
            <img class="post-image"
            src="<%= user.profileImageUrl %>" 
                 <%= user.name %>
                    />
        <p><a href="/users/<%= user.id %>"><%= user.name %></a></p>
        
        </li>
    <% }); %>
</ol>
<%if (next) { %>
    <a href="<%= next %>">Next</a>
<% } %>
<%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
<% } %>
</body>
<%- include('_footer') -%>
</html>